package string;

public class reverseString {

	public static void main(String[] args) {
		
		// reverse a String 
	
	/*	String str = "sahil";
		String rev = "";		
		for(int i = str.length() - 1; i >= 0; i-- ) {
			rev = rev + str.charAt(i);
		}

		System.out.println(rev);
	}
	
	// palindrome string
	
	String str2 = "madam";
	String revs = "";
	
	for(int i = str2.length() - 1; i>= 0; i--) { // reverse
		revs = revs + str2.charAt(i);
	}
	if(str2.equals(revs))
        System.out.println("this is a palindrome");
	else
		System.out.println("This is not a palindrome"); */
		
		// lexigraphically compare two string
		
		String s1 = "Mango";
		String s2 = "mango";
		
		System.out.println(s1.length());
		System.out.println(s1.charAt(3));
		System.out.println(s1.concat(s2));
		System.out.println(s1.isBlank());
		System.out.println(s2.isEmpty());
		System.out.println(s1.equals(s2));
		System.out.println(s1.codePointAt(1));
		System.out.println(s1.compareToIgnoreCase(s2));
		System.out.println(s1.contains(s2));
		System.out.println(s1.indexOf(s2));
		System.out.println(s1.codePointAt(0));
		System.out.println(s1.codePointCount(1, 2));
		System.out.println(s1.intern());
		System.out.println(s1.lastIndexOf(s2));
		System.out.println(s1.matches(s2));
		System.out.println(s1.repeat(2));
		System.out.println(s1.replace("m", "s"));
		System.out.println(s1.strip());
		System.out.println(s1.toUpperCase());
		System.out.println(s1.toLowerCase());
		int result  = s1.compareTo(s2);
		
		System.out.println(result);
}
}